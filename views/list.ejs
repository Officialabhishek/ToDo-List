    <%- include('partials/header'); -%>

    <main id="box">
        <div class="date">
            <h1>
                <%= date %>
            </h1>
        </div>
        <div class="list">

            <% newItem.forEach((item)=> { %>
                <form action="/delete" method="post">
                    <div class="item">
                        <input type="checkbox" name="delete" value="<%= item._id %>" onchange="this.form.submit()">
                        <p class="item-p">
                            <%= item.item %>
                        </p>
                    </div>
                </form>
                <% }) %>
                    <form class="form" action="/list" method="post">
                        <input type="text" name="item" placeholder="Add Item" autocomplete="off">
                        <button class="btn" type="submit">+</button>
                    </form>
        </div>
        <div class="love">
            <p>Made with ❤️ in India.</p>
        </div>
    </main>

    <%- include('partials/footer'); -%>
</body>

</html>