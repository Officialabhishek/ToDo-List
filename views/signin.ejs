<%- include('partials/header'); -%>

<div class="wrapper">
    <div class="form-wrapper sign-in">
        <form action="/signin" method="post">
            <h2>Welcome Back!</h2>
            <div class="input-group">
                <input type="email" name="username" id="">
                <label for="">Email</label>
            </div>
            <div class="input-group">
                <input type="password" name="password" id="">
                <label for="">Password</label>
            </div>
            <div class="forgot-pass">
                <a href="#">Forgot Password?</a>
            </div>
            <button type="submit" class="btnnn">Login</button>
            <div class="sign-link">
                <p>Don't have an account? <a href="/signup" class="signUp-link">Sign Up</a></p>
            </div>

            <div class="auth">
                <a href="/auth/google" class="btnnn btn-block signUp-link" role="button">Sign in with google</a>
            </div>
        </form>
    </div>
</div>

<%- include('partials/footer'); -%>
